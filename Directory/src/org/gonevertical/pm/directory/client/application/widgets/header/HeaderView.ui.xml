<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">
    <ui:style>
        
    </ui:style>

    <!--VerticalLayoutData margins -->
    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins">
        <ui:attributes top="0" right="0" bottom="0" left="0" />
    </ui:with>

    <!-- VerticalLayoutData layoutData -->
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
        field="layoutData">
        <ui:attributes width="1" height="30" margins="{margins}" />
    </ui:with>

    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="hzMargins">
        <ui:attributes top="0" right="0" bottom="0" left="0" />
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
        field="hzLayoutData">
        <ui:attributes width="1" height="-1" margins="{hzMargins}" />
    </ui:with>

    <container:SimpleContainer>

        <container:VerticalLayoutContainer>
            <container:child layoutData="{layoutData}">

                <container:HorizontalLayoutContainer>
                    <container:child layoutData="{hzLayoutData}">
                        <container:HtmlLayoutContainer ui:field="title"/>
                    </container:child>

                    <container:child layoutData="{hzLayoutData}">
                        <container:SimpleContainer ui:field="login" />
                    </container:child>
                </container:HorizontalLayoutContainer>

            </container:child>
            <container:child layoutData="{layoutData}">

                <container:HorizontalLayoutContainer>
                    <container:child layoutData="{hzLayoutData}">
                        <g:HTMLPanel>
                            <a href="#home">Home</a>
                        </g:HTMLPanel>
                    </container:child>

                    <container:child layoutData="{hzLayoutData}">
                        <g:HTMLPanel ui:field="admin">
                            <a href="#admin">Admin</a>
                        </g:HTMLPanel>
                    </container:child>

                    <container:child layoutData="{hzLayoutData}">
                        <container:HtmlLayoutContainer ui:field="explorer"/>
                    </container:child>

                    <container:child layoutData="{hzLayoutData}">
                        <g:HTMLPanel>
                            <a href="https://github.com/branflake2267/Project-Manager" target="_blank">Project Source</a>
                        </g:HTMLPanel>
                    </container:child>
                </container:HorizontalLayoutContainer>

            </container:child>
        </container:VerticalLayoutContainer>

    </container:SimpleContainer>
</ui:UiBinder>
