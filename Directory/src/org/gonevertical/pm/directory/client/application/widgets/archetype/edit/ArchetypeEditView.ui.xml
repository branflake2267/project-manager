<ui:UiBinder 
    xmlns:ui='urn:ui:com.google.gwt.uibinder' 
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
    xmlns:gxt='urn:import:com.sencha.gxt.widget.core.client' 
    xmlns:util='urn:import:com.sencha.gxt.core.client.util'
    xmlns:form='urn:import:com.sencha.gxt.widget.core.client.form' 
    xmlns:button='urn:import:com.sencha.gxt.widget.core.client.button'>
    <ui:style>
        .widget {
            
        }
        
        .inputDiv {
            margin: 10px;
        }
        
        .textField {
            width: 100px;
            text-align: right;
            display: inline-block;
            vertical-align: middle;
        }
        
        .textInput {
            width: 300px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.widget}">

        <button:TextButton ui:field="goback" text="Back to the List" />

        <button:TextButton ui:field="save" text="Save" />

        <div class="{style.inputDiv}">
            <div class="{style.textField}">Name:</div>
            <form:TextField ui:field="name" addStyleNames="{style.textInput}" />
        </div>

        <div class="{style.inputDiv}">
            <div class="{style.textField}">Description:</div>
            <form:TextField ui:field="description" addStyleNames="{style.textInput}" />
        </div>

        <br />

        <div class="{style.inputDiv}">
            <div class="{style.textField}">Repository:</div>
            <form:TextField ui:field="repository" addStyleNames="{style.textInput}" />
        </div>

        <div class="{style.inputDiv}">
            <div class="{style.textField}">GroupId:</div>
            <form:TextField ui:field="groupId" addStyleNames="{style.textInput}" />
        </div>

        <div class="{style.inputDiv}">
            <div class="{style.textField}">ArtifactId:</div>
            <form:TextField ui:field="artifactId" addStyleNames="{style.textInput}" />
        </div>

        <div class="{style.inputDiv}">
            <div class="{style.textField}">Version:</div>
            <form:TextField ui:field="version" addStyleNames="{style.textInput}" />
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
