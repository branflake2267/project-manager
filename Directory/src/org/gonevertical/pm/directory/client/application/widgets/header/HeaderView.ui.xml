<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .widget {
            margin-bottom: 15px;    
        }
        
        .login {
            float: right;
        }
        
        .links {
            display: inline;
        }
        
        .link {
            margin-right: 10px;
        }
    </ui:style>
    
    <g:HTMLPanel styleName="{style.widget}">
    
        <div>
            Curated Archetype Directory
            <g:SimplePanel ui:field="login" styleName="{style.login}"/>
        </div>
        
        <div class="{style.links">
            <a href="#home" class="{style.link}">Home</a>
            <a href="#admin" class="{style.link}">Admin</a>
        </div>
         
    </g:HTMLPanel>
</ui:UiBinder>
