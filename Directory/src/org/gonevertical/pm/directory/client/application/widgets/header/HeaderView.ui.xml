<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .widget {
            margin-bottom: 15px;    
        }
        
        .login {
            float: right;
        }
        
        .links {
            display: inline-block;
        }
        
        .link {
            margin-right: 10px;
            display: inline;
        }
    </ui:style>
    
    <g:HTMLPanel styleName="{style.widget}">
    
        <div>
            Curated Archetype Directory
            <g:SimplePanel ui:field="login" styleName="{style.login}"/>
        </div>
        
        <div class="{style.links}">
            <a href="#home" class="{style.link}">Home</a>
                        
            <g:FlowPanel ui:field="explorer" styleName="{style.link}"/>
            
            <g:HTMLPanel ui:field="admin" styleName="{style.links}">
                <a href="#admin" class="{style.link}">Admin</a>
            </g:HTMLPanel>
            
            <a href="https://github.com/branflake2267/Project-Manager" target="_blank" class="{style.link}">Project Source</a>
        </div>
         
    </g:HTMLPanel>
</ui:UiBinder>
